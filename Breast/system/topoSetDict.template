FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
$$ x_cord = x
$$ y_cord = y
$$ z_cord = z
$$ r_val = r
$$ muscle_radius = mr
$$ gland_radius = gr
$$ skin_radius = sr

actions
(
    // muscle
    {
        name    muscleCellSet;
        type    cellSet;
        action  new;
        source sphereToCell;
        sourceInfo
       {
        centre   (0 0 0);
        radius   $muscle_radius$;
       }
    }
   
    // set muscle cell zone from cell set
    {
        name    muscle;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set muscleCellSet;
        }
    }

    // tumor
    {
        name    tumorCellSet;
        type    cellSet;
        action  new;
        source sphereToCell;
        sourceInfo
       {
        centre   ($x_cord$ $y_cord$ $z_cord$);
        radius   $r_val$;
       }
    }
   
    // set tumor cell zone from cell set
    {
        name    tumor;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set tumorCellSet;
        }
    }
     
      // gland
    {
        name    glandCellSet;
        type    cellSet;
        action  new;
        source sphereToCell;
        sourceInfo
       {
        centre   (0 0 0);
        radius   $gland_radius$;
       }
    }

     // gland-muscle
     {
        name    glandCellSet;
        type    cellSet;
        action  delete;
        source sphereToCell;
        sourceInfo
       {
        centre   (0 0 0);
        radius   $muscle_radius$;
       }
    }

    // gland-tumor

     {
        name    glandCellSet;
        type    cellSet;
        action  delete;
        source sphereToCell;
        sourceInfo
       {
        centre   ($x_cord$ $y_cord$ $z_cord$);
        radius   $r_val$;
       }
    }
    
    // set gland cell zone from cell set
    {
        name    gland;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set glandCellSet;
        }
    }

     // tissue
    {
        name    tissueCellSet;
        type    cellSet;
        action  new;
        source sphereToCell;
        sourceInfo
       {
        centre   (0 0 0);
        radius   $skin_radius$;
       }
    }

     // tissue-gland
     {
        name    tissueCellSet;
        type    cellSet;
        action  delete;
        source sphereToCell;
        sourceInfo
       {
        centre   (0 0 0);
        radius   $gland_radius$;
       }
    }
   
  // set tissue cell zone from cell set
    {
        name    tissue;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set tissueCellSet;
        }
    }
    
);


