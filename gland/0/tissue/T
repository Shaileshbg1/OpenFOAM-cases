FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/tissue";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 37;

boundaryField
{
    ".*"
    {
        type            calculated;
        value           uniform 37;
    }
    adiabatic_wall
    {
        type            zeroGradient;
    }
    skin
    {
        type            externalWallHeatFluxTemperature;
        mode            coefficient;
        Ta              constant 22;
        h               uniform 13.5;
        kappaMethod     solidThermo;
        value           uniform 37;
    }
    tissue_to_gland
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappaMethod     solidThermo;
        value           uniform 37;
    }
}


